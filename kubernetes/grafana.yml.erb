apiVersion: v1
kind: Service
metadata:
  name: service
spec:
  selector:
    app: grafana
  ports:
    - port: 80
      targetPort: 3000
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: deployment
  labels:
    app: grafana
spec:
  replicas: 1
  selector:
    matchLabels:
      app: grafana
  template:
    metadata:
      labels:
        app: grafana
    spec:
      containers:
        - name: grafana
          image: "docker.ocf.berkeley.edu/grafana:<%= version %>"
          resources:
            limits:
              memory: 512Mi
              cpu: 175m
          ports:
            - containerPort: 3000
          envFrom:
            - secretRef:
                name: grafana-secret
      dnsPolicy: ClusterFirst
      dnsConfig:
        searches:
          - ocf.berkeley.edu
---
apiVersion: extensions/v1beta1
kind: Ingress
metadata:
  name: virtual-host-ingress
spec:
  rules:
    - host: grafana.ocf.berkeley.edu
      http:
        paths:
          - backend:
              serviceName: service
              servicePort: 80
---
apiVersion: v1
kind: Secret
metadata:
  name: grafana-secret
type: Opaque
stringData:
  GF_SERVER_ROOT_URL: "https://grafana.ocf.berkeley.edu"
  GF_DATABASE_TYPE: mysql
  GF_DATABASE_HOST: mysql
  GF_DATABASE_NAME: ocfgrafana
  GF_DATABASE_USER: ocfgrafana
  GF_SESSION_PROVIDER: mysql
  GF_SESSION_COOKIE_SECURE: "true"
  GF_DATABASE_PASSWORD: "<%= mysql_pass %>"
  GF_SECURITY_ADMIN_PASSWORD: "<%= admin_pass %>"
  GF_SESSION_PROVIDER_CONFIG: "<%= provider_config %>"
  GF_AUTH_GENERIC_OAUTH_CLIENT_SECRET: "<%= keycloak_secret %>"
  PROMETHEUS_AUTH_USER: ocfgrafana
  PROMETHEUS_AUTH_PASSWORD: "<%= prometheus_pass %>"
